<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ANIMAL FACTORY</title>
    <style>

        body{
            background-color: rgb(179, 179, 179);
        }
        h2{
            font-size: 5rem;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: black;
        }
        .container{
            display: flex;
            flex-wrap: wrap;
        }
        .addcard{
            font-size: 40px;
            position: relative;
            top: 0px;
            background-color: rgb(98, 98, 98);
            box-shadow: 0px 0px 4px 8px rgb(98, 98, 98);
            /* border: 2px solid aqua; */
            margin: 0px;
            height: 200px;
            width: 200px;
        }
        .card1{
            position: relative;
            top: 0px;
            border: 2px solid aqua;
            margin: 0px;
            height: 200px;
            width: 200px;

        }
        .imgs{
            height: 200px;
            width: 200px;
            z-index: 0;

        }
        img{
            height: 100%;
            width: 100%;
            opacity: 0.7;
        }
        .ids,.usernames{
            z-index: 1;
            position: relative;
            top: -55px;
            height: 20px;
            overflow-x: hidden;
            margin: 2px;
            border: 2px solid black;
            background-color: rgba(255, 255, 255, 0.614);
        }
        .imgs:hover{
            opacity: 0.1;
        }
        .btn{
            margin: 40px;

            height: 200px;
            width: 200px;
            background-color: rgba(255, 255, 255, 0);
            border: 2px solid rgba(255, 0, 0, 0);
        }
        .inputname,.add{
            opacity: 0;
        }
        .x{
            height: 20px;
            
            position: relative;
            left: -100px;
        }
    </style>
</head>
<body>
    <h2>ANIMAL FACTORY</h2>
    <br>
    <div class="container">
    <form action="/user/new" method="post">
        <div class="addcard">CLICK TO ADD NEW USER</div>
        <textarea name="changename" placeholder="enter new name" class="inputname"></textarea>
    <button class="add">ADD</button>
    </form>

    <% for( user of users ) { %>
    
    <form action="/user/<%= user.Id %>/edit" method="get">
        <button class="btn">
        <div class="card1">
            <div class="imgs"><img src=""></div>
            <div class="ids"><%= user.Id %></div>
            <div class="usernames"><%= user.Username %></div>
        </div>
        </button>
    </form>
   
    <% } %>
    </div>
</body>
<script>
    // let imgs=document.querySelector(".imgs");
    let imgs=document.querySelectorAll("img");
    
    let url="https://random.dog/woof.json";
    async function getcat(i){
    let res= await fetch(url);
    let data = await res.json();
    // res.send(data);
    console.log(data.url);
    i.setAttribute('src',data.url);
}
for (const i of imgs) {  
    getcat(i);
}

let card=document.querySelector(".card1");
card.addEventListener("click",function (event) {
    
});

let addbtn=document.querySelector(".add");
let add=document.querySelector(".addcard");
let inputname=document.querySelector(".inputname");
add.addEventListener("click",function (event) {
    inputname.style.opacity=1;
    add.style.opacity=0;
    addbtn.style.opacity=1;
})
</script>
</html>